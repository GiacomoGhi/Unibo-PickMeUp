@model PickMeUp.Web.Features.Login.ResendConfirmationViewModel
@{
    ViewData["Title"] = "Reinvia Email di Conferma";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Reinvia Email di Conferma</h2>
            
            <p class="text-center mb-4">
                Non hai ricevuto l'email di conferma? Inserisci il tuo indirizzo email e ti invieremo un nuovo link di conferma.
            </p>
            
            <form method="post" role="form" autocomplete="off">
                <div class="form-group mb-3">
                    <label asp-for="Email" class="onit-label-required"></label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <button type="submit" class="btn btn-primary w-100">Invia Email di Conferma</button>
                </div>

                <div class="text-center mt-3">
                    <p><a asp-action="Login">Torna al Login</a></p>
                </div>
            </form>
        </div>
    </div>
</div>
