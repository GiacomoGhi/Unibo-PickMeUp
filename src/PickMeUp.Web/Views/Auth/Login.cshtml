@using Microsoft.Extensions.Options
@using PickMeUp.Core.Services.GoogleRoutes

@inject IOptions<GoogleSettings> _googleSettings

@model PickMeUp.Web.Models.Auth.LoginViewModel
@{
    ViewData["Title"] = "Accedi - Pick-me-UP";
    Layout = "_Layout";
}

<style>
    body {
        background: linear-gradient(to bottom, #212529 50%, #f8f9fa 50%);
    }
    @@media (min-width: 768px) {
        body {
            background: linear-gradient(to right, #212529 50%, #f8f9fa 50%);
        }
    }
</style>

@section hero {
    <div class="row ms-1">
        <div class="col-6 text-end p-0">
            <h1 class="display-3 fw-bold text-white">Log</h1>
        </div>
        <div class="col-6 text-start p-0">
            <h1 class="display-3 fw-bold text-white d-md-none">In</h1>
            <h1 class="display-3 fw-bold text-dark d-none d-md-block">In</h1>
        </div>
    </div>
}

<div class="d-flex flex-column flex-grow-1 justify-content-center position-relative">
    <div class="row h-100 align-items-start">
        <!-- Left Side (Dark) -->
        <div class="col-12 col-md-6 text-center text-white mb-5 mb-md-0 d-flex flex-column align-items-center" style="min-height: 300px;">
            
            <!-- Google Button -->
            <div id="googleLoginBtn" 
                 data-url="@Url.Action("GoogleLogin", "Auth")"
                 data-return-url="@Model.ReturnUrl"
                 data-google-client-id="@_googleSettings.Value.ClientId"
                 class="mb-4 btn-google-custom"></div>

            <!-- Other Options Button -->
            <a href="@Url.Action("Login", "Auth", new { useCredentials = true, returnUrl = Model.ReturnUrl })" class="btn bg-white text-dark py-3 px-4 rounded-1 fw-bold text-uppercase shadow-sm" style="min-width: 280px;">
                ALTRE OPZIONI DI ACCESSO
            </a>
        </div>

        <!-- Right Side (Light) -->
        <div class="col-12 col-md-6 text-dark mt-5 mt-md-0 d-flex flex-column justify-content-center align-items-center">
            
            <!-- Register Button -->
            <a href="@Url.Action("SignUp", "Auth", new { returnUrl = Model.ReturnUrl })" class="btn btn-primary p-3 rounded-4 d-flex align-items-center gap-3 shadow-lg text-white border-0" style="min-width: 280px; min-height: 80px;">
                <i class="fa-solid fa-plus fa-2x"></i>
                <div class="text-start">
                    <div class="fw-bold fs-5">REGISTRATI</div>
                </div>
            </a>

        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/auth.js"></script>
}
