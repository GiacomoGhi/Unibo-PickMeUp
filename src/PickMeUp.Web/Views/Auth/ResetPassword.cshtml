@model PickMeUp.Web.Models.Auth.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reimposta Password";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h2 class="h4">üîê Reimposta Password</h2>
                        <p class="text-muted mb-0">Inserisci la tua nuova password</p>
                    </div>

                    <form asp-controller="Auth" asp-action="ResetPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="Token" />

                        <div class="mb-3 pmu-form-group">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <label asp-for="NewPassword" class="form-label mb-0"></label>
                                <div class="d-flex align-items-center">
                                    <div id="resetPasswordStrength" class="d-flex gap-1 me-2" aria-hidden="true">
                                        <span class="badge bg-secondary rounded-pill pmu-strength-dot" data-rule="length"></span>
                                        <span class="badge bg-secondary rounded-pill pmu-strength-dot" data-rule="number"></span>
                                        <span class="badge bg-secondary rounded-pill pmu-strength-dot" data-rule="uppercase"></span>
                                        <span class="badge bg-secondary rounded-pill pmu-strength-dot" data-rule="special"></span>
                                    </div>
                                    <div class="pmu-info-wrap position-relative">
                                        <button type="button" class="btn btn-link p-0 small pmu-password-info-btn" id="resetPasswordInfo" tabindex="-1" aria-label="Requisiti password">
                                            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <circle cx="10" cy="10" r="9" stroke="currentColor" stroke-width="1.5"/>
                                                <path d="M10 6V10M10 14H10.01" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                                            </svg>
                                        </button>
                                        <div id="resetPasswordRequirements" class="small text-muted mt-1 pmu-requirements-popup" style="display:none;">
                                            <div class="pmu-requirement" data-rule="length">‚óè Almeno 8 caratteri</div>
                                            <div class="pmu-requirement" data-rule="number">‚óè Un numero</div>
                                            <div class="pmu-requirement" data-rule="uppercase">‚óè Una lettera maiuscola</div>
                                            <div class="pmu-requirement" data-rule="special">‚óè Un carattere speciale (!@@#$%^&*)</div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex align-items-center mb-2">
                                <div class="flex-grow-1">
                                    <div class="input-group">
                                        <input asp-for="NewPassword" class="form-control" placeholder="Minimo 8 caratteri" id="resetPassword" />
                                        <button type="button" class="btn btn-outline-secondary" data-target="resetPassword" tabindex="-1" aria-label="Toggle password visibility">
                                            <span class="eye-open">üëÅ</span>
                                            <span class="eye-closed" style="display:none;">üôà</span>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <span asp-validation-for="NewPassword" class="invalid-feedback d-block"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Ripeti la password" id="resetConfirmPassword" />
                                <button type="button" class="btn btn-outline-secondary" data-target="resetConfirmPassword" tabindex="-1" aria-label="Toggle password visibility">
                                    <span class="eye-open">üëÅ</span>
                                    <span class="eye-closed" style="display:none;">üôà</span>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="invalid-feedback d-block"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Reimposta Password</button>
                    </form>

                    <div class="text-center mt-3">
                        <a href="@Url.Action("Landing", "Home")" class="link-secondary">Torna alla home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>