@model PickMeUp.Web.Models.Auth.LoginViewModel
@{
    ViewData["Title"] = "Accedi";
    Layout = "_Layout";
}

<style>
    body {
        background: linear-gradient(to bottom, #212529 50%, #f8f9fa 50%);
    }
    @@media (min-width: 768px) {
        body {
            background: linear-gradient(to right, #212529 50%, #f8f9fa 50%);
        }
    }
</style>

<div class="d-flex flex-column flex-grow-1 justify-content-center position-relative">
    <div class="row h-100 align-items-center">
        <!-- Left Side (Dark) -->
        <div class="col-12 col-md-6 text-center text-white mb-5 mb-md-0 d-flex flex-column justify-content-center align-items-center" style="min-height: 300px;">
            <div class="text-center mb-4">
                <h1 class="display-4 fw-bold mb-3">Bentornato!</h1>
                <p class="lead text-white-50">Inserisci le tue credenziali per accedere.</p>
            </div>
        </div>

        <!-- Right Side (Light) -->
        <div class="col-12 col-md-6 text-dark mt-5 mt-md-0 p-4 p-md-5 d-flex flex-column justify-content-center align-items-center">
            <div class="w-100 mx-auto" style="max-width: 450px;">
                <h2 class="fw-bold mb-4 text-dark">Accedi</h2>

                <form asp-action="Login" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control form-control-lg bg-white text-dark" placeholder="name@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control form-control-lg bg-white text-dark" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="text-end mb-3">
                        <a href="#" class="text-dark text-decoration-none small" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal">
                            <i class="bi bi-key me-1"></i>Password dimenticata?
                        </a>
                    </div>

                    <div class="d-grid gap-2 my-4">
                        <button type="submit" class="btn btn-primary btn-lg">Accedi</button>
                    </div>
                </form>

                <div class="text-center">
                    <p class="text-dark">
                        Non hai un account? 
                        <a asp-action="SignUp" class="text-decoration-none fw-bold text-dark">Registrati</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Password Reset Modal (Non-dismissible) -->
@if (Model.ShowPasswordResetModal && Model.ResetPasswordData != null)
{
    <div class="modal fade show" id="resetPasswordModal" tabindex="-1" aria-labelledby="resetPasswordModalLabel" style="display: block; background-color: rgba(0,0,0,0.5);" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold" id="resetPasswordModalLabel">
                        <i class="bi bi-shield-lock-fill text-primary me-2"></i>Reimposta la tua Password
                    </h5>
                </div>
                <form asp-action="ResetPassword" method="post">
                    <input type="hidden" name="UserId" value="@Model.ResetPasswordData.UserId" />
                    <input type="hidden" name="Token" value="@Model.ResetPasswordData.Token" />
                    
                    <div class="modal-body">
                        <p class="text-muted mb-4">
                            Scegli una nuova password sicura per il tuo account.
                        </p>
                        
                        <div class="mb-3 pmu-form-group">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <label for="NewPassword" class="form-label mb-0">Nuova Password</label>
                                <div class="d-flex align-items-center">
                                    <div id="passwordStrength" class="d-flex gap-1 me-2" aria-hidden="true">
                                        <span class="pmu-strength-dot" data-rule="length">●</span>
                                        <span class="pmu-strength-dot" data-rule="number">●</span>
                                        <span class="pmu-strength-dot" data-rule="uppercase">●</span>
                                        <span class="pmu-strength-dot" data-rule="special">●</span>
                                    </div>
                                    <div class="pmu-info-wrap position-relative">
                                        <button type="button" class="btn btn-link p-0 small pmu-password-info-btn" id="passwordInfo" tabindex="-1" aria-label="Requisiti password">?</button>
                                        <div id="passwordRequirements" class="small text-muted mt-1 pmu-requirements-popup" style="display:none;">
                                            <div class="pmu-requirement" data-rule="length">● Almeno 8 caratteri</div>
                                            <div class="pmu-requirement" data-rule="number">● Un numero</div>
                                            <div class="pmu-requirement" data-rule="uppercase">● Una lettera maiuscola</div>
                                            <div class="pmu-requirement" data-rule="special">● Un carattere speciale (!@@#$%^&*)</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <input type="password" class="form-control form-control-lg" id="NewPassword" name="NewPassword" placeholder="Nuova Password" required />
                            <span asp-validation-for="ResetPasswordData.NewPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="ConfirmPassword" class="form-label">Conferma Password</label>
                            <input type="password" class="form-control form-control-lg" id="ConfirmPassword" name="ConfirmPassword" placeholder="Conferma Password" required />
                            <span asp-validation-for="ResetPasswordData.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer border-0">
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-check-circle me-1"></i>Reimposta Password
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<!-- Forgot Password Modal -->
<div class="modal fade" id="forgotPasswordModal" tabindex="-1" aria-labelledby="forgotPasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold" id="forgotPasswordModalLabel">
                    <i class="bi bi-key-fill text-primary me-2"></i>Recupera Password
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Auth" asp-action="RequestPasswordReset" method="post">
                <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                <div class="modal-body">
                    <p class="text-muted mb-4">
                        Niente panico! Inserisci la tua email e ti invieremo un link per reimpostare la password.
                    </p>
                    <div class="mb-3">
                        <label for="resetEmail" class="form-label">Email</label>
                        <input type="email" class="form-control form-control-lg" id="resetEmail" name="email" placeholder="name@example.com" required />
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Annulla
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-send me-1"></i>Invia Link di Reset
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/js/password-validation.js" asp-append-version="true"></script>
    <script src="~/js/password-toggle.js" asp-append-version="true"></script>
}