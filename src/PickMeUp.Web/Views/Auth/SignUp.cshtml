@model PickMeUp.Web.Models.Auth.SignUpViewModel
@{
    ViewData["Title"] = "Registrati";
    Layout = "_Layout";
}

<style>
    body {
        background: linear-gradient(to bottom, #212529 50%, #f8f9fa 50%);
    }
    @@media (min-width: 768px) {
        body {
            background: linear-gradient(to right, #212529 50%, #f8f9fa 50%);
        }
    }
</style>

<div class="d-flex flex-column flex-grow-1 justify-content-center position-relative">
    <div class="row h-100 align-items-center">
        <!-- Left Side (Dark) -->
        <div class="col-12 col-md-6 text-center text-white mb-5 mb-md-0 d-flex flex-column justify-content-center align-items-center" style="min-height: 300px;">
            <div class="text-center mb-4">
                <h1 class="display-4 fw-bold mb-3">Benvenuto!</h1>
                <p class="lead text-white-50">Crea il tuo account per iniziare a viaggiare.</p>
            </div>
        </div>

        <!-- Right Side (Light) -->
        <div class="col-12 col-md-6 text-dark mt-5 mt-md-0 p-4 p-md-5 d-flex flex-column justify-content-center align-items-center">
            <div class="w-100 mx-auto" style="max-width: 450px;">
                <h2 class="fw-bold mb-4 text-dark">Registrati</h2>

                <form asp-action="SignUp" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />
                    
                    <div class="row mb-3">
                        <div class="col">
                            <label asp-for="FirstName" class="form-label">Nome</label>
                            <input asp-for="FirstName" class="form-control form-control-lg bg-white text-dark" placeholder="Nome" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="LastName" class="form-label">Cognome</label>
                            <input asp-for="LastName" class="form-control form-control-lg bg-white text-dark" placeholder="Cognome" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control form-control-lg bg-white text-dark" placeholder="name@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3 pmu-form-group">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <label asp-for="Password" class="form-label mb-0">Password</label>
                            <div class="d-flex align-items-center">
                                <div id="passwordStrength" class="d-flex gap-1 me-2" aria-hidden="true">
                                    <span class="pmu-strength-dot" data-rule="length">●</span>
                                    <span class="pmu-strength-dot" data-rule="number">●</span>
                                    <span class="pmu-strength-dot" data-rule="uppercase">●</span>
                                    <span class="pmu-strength-dot" data-rule="special">●</span>
                                </div>
                                <div class="pmu-info-wrap position-relative">
                                    <button type="button" class="btn btn-link p-0 small pmu-password-info-btn" id="passwordInfo" tabindex="-1" aria-label="Requisiti password">?</button>
                                    <div id="passwordRequirements" class="small text-muted mt-1 pmu-requirements-popup" style="display:none;">
                                        <div class="pmu-requirement" data-rule="length">● Almeno 8 caratteri</div>
                                        <div class="pmu-requirement" data-rule="number">● Un numero</div>
                                        <div class="pmu-requirement" data-rule="uppercase">● Una lettera maiuscola</div>
                                        <div class="pmu-requirement" data-rule="special">● Un carattere speciale (!@@#$%^&*)</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <input asp-for="Password" type="password" class="form-control form-control-lg bg-white text-dark" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Conferma Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg bg-white text-dark" placeholder="Conferma Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mb-4">
                        <button type="submit" class="btn btn-primary btn-lg">Registrati</button>
                    </div>
                </form>

                <div class="text-center">
                    <p class="text-dark">
                        Hai già un account? 
                        <a asp-action="Login" class="text-decoration-none fw-bold text-dark">Accedi</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/password-validation.js" asp-append-version="true"></script>
    <script src="~/js/password-toggle.js" asp-append-version="true"></script>
}