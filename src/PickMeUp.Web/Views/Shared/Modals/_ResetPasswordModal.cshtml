<!-- Reset Password Modal - Bootstrap Standard -->
<div class="modal fade pmu-modal pmu-modal-dark pmu-auth-modal pmu-dark-theme" id="resetPasswordModal" tabindex="-1" aria-labelledby="resetPasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="resetPasswordModalLabel">Reimposta Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="pmu-subtitle text-center">Inserisci la tua email per ricevere le istruzioni di reset.</p>
                <form id="resetForm" data-url="@Url.Action("RequestPasswordReset", "Auth")">
                    <div class="pmu-form-group">
                        <label for="resetEmail">Email</label>
                        <input type="email" class="pmu-form-control" id="resetEmail" name="Email" placeholder="tua@email.com" required />
                    </div>
                    
                    <button type="submit" class="pmu-btn pmu-btn-warning">Invia</button>
                </form>
                
                <a href="#" class="pmu-link-secondary text-center" data-bs-toggle="modal" data-bs-target="#loginModal" data-bs-dismiss="modal">
                    Torna al login
                </a>
            </div>
        </div>
    </div>
</div>
