@inject Microsoft.AspNetCore.Mvc.IUrlHelper Url
<!-- Resend Confirmation Modal - Bootstrap Standard -->
<div class="modal fade" id="resendModal" tabindex="-1" aria-labelledby="resendModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="resendModalLabel">Reinvia Email di Conferma</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-center text-muted">Inserisci la tua email per ricevere nuovamente il link di conferma.</p>
                
                <form id="resendForm" asp-controller="Auth" asp-action="ResendConfirmation" method="post" data-url="@Url.Action("ResendConfirmation", "Auth")">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label for="resendEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="resendEmail" name="Email" placeholder="tua@email.com" required />
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Reinvia Email</button>
                </form>
                
                <div class="text-center mt-3">
                    <a href="#" class="link-secondary" data-bs-toggle="modal" data-bs-target="#loginModal" data-bs-dismiss="modal">
                        Torna al login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
