@inject Microsoft.AspNetCore.Mvc.IUrlHelper Url
<!-- Resend Confirmation Modal - Bootstrap Standard -->
<div class="modal fade pmu-modal pmu-modal-dark pmu-auth-modal pmu-dark-theme" id="resendModal" tabindex="-1" aria-labelledby="resendModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="resendModalLabel">Reinvia Email di Conferma</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="pmu-subtitle text-center">Inserisci la tua email per ricevere nuovamente il link di conferma.</p>
                
                <form id="resendForm" data-url="@Url.Action("ResendConfirmation", "Auth")">
                    <div class="pmu-form-group">
                        <label for="resendEmail">Email</label>
                        <input type="email" class="pmu-form-control" id="resendEmail" name="Email" placeholder="tua@email.com" required />
                    </div>
                    
                    <button type="submit" class="pmu-btn pmu-btn-primary">Reinvia Email</button>
                </form>
                
                <a href="#" class="pmu-link-secondary text-center" data-bs-toggle="modal" data-bs-target="#loginModal" data-bs-dismiss="modal">
                    Torna al login
                </a>
            </div>
        </div>
    </div>
</div>
