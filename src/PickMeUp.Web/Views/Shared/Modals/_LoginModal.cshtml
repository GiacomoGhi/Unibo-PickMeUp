@inject Microsoft.AspNetCore.Mvc.IUrlHelper Url
<!-- Login Modal - Bootstrap Standard -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginModalLabel">Accedi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="googleLoginBtn" class="mb-3" data-url="@Url.Action("GoogleLogin", "Auth")"></div>
                
                <div class="divider"><span>oppure</span></div>
                
                <form id="loginForm" data-url="@Url.Action("Login", "Auth")">
                    <div class="mb-3">
                        <label for="loginEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="loginEmail" name="Email" required />
                    </div>
                    
                    <div class="mb-3">
                        <label for="loginPassword" class="form-label">Password</label>
                        <input type="password" class="form-control" id="loginPassword" name="Password" required />
                    </div>
                    
                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="rememberMe" name="RememberMe" />
                        <label class="form-check-label" for="rememberMe">Ricordami</label>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100">Accedi</button>
                </form>
                
                <div class="text-center mt-3">
                    <a href="#" data-bs-toggle="modal" data-bs-target="#resetPasswordModal" data-bs-dismiss="modal">Password dimenticata?</a>
                </div>
                <div class="text-center mt-2">
                    <small>Non hai un account? <a href="#" data-bs-toggle="modal" data-bs-target="#signupModal" data-bs-dismiss="modal">Registrati</a></small>
                </div>
                <div class="text-center mt-2">
                    <small>Non hai ricevuto l'email? <a href="#" data-bs-toggle="modal" data-bs-target="#resendModal" data-bs-dismiss="modal">Reinvia</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
