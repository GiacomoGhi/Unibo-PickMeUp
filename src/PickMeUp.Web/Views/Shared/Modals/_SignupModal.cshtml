@inject Microsoft.AspNetCore.Mvc.IUrlHelper Url
<!-- Signup Modal - Bootstrap Standard -->
<div class="modal fade pmu-modal pmu-modal-dark pmu-auth-modal pmu-dark-theme" id="signupModal" tabindex="-1" aria-labelledby="signupModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="signupModalLabel">Registrati</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="pmu-subtitle text-center">Crea un account per iniziare a condividere viaggi</p>

                <div class="pmu-google-signin">
                    <div id="googleSignupBtn" data-url="@Url.Action("GoogleLogin", "Auth")"></div>
                </div>
                
                <div class="pmu-divider"><span>oppure</span></div>
                
                <form id="signupForm" data-url="@Url.Action("SignUp", "Auth")">
                    <div class="pmu-form-group">
                        <label for="signupFirstName">Nome</label>
                        <input type="text" class="pmu-form-control" id="signupFirstName" name="FirstName" placeholder="Mario" required />
                    </div>
                    
                    <div class="pmu-form-group">
                        <label for="signupLastName">Cognome</label>
                        <input type="text" class="pmu-form-control" id="signupLastName" name="LastName" placeholder="Rossi" required />
                    </div>
                    
                    <div class="pmu-form-group">
                        <label for="signupEmail">Email</label>
                        <input type="email" class="pmu-form-control" id="signupEmail" name="Email" placeholder="mario.rossi@email.com" required />
                    </div>
                    
                    <div class="pmu-form-group">
                        <div class="pmu-password-label-row">
                            <label for="signupPassword">Password</label>
                            <div class="pmu-password-indicators">
                                <div class="pmu-password-strength" id="signupPasswordStrength">
                                    <div class="pmu-strength-indicator">
                                        <span class="pmu-strength-dot" data-rule="length"></span>
                                        <span class="pmu-strength-dot" data-rule="number"></span>
                                        <span class="pmu-strength-dot" data-rule="uppercase"></span>
                                        <span class="pmu-strength-dot" data-rule="special"></span>
                                    </div>
                                </div>
                                <button type="button" class="pmu-password-info-btn" id="signupPasswordInfo" tabindex="-1">
                                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <circle cx="10" cy="10" r="9" stroke="currentColor" stroke-width="1.5"/>
                                        <path d="M10 6V10M10 14H10.01" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                                    </svg>
                                </button>
                            </div>
                            <div class="pmu-password-requirements" id="signupPasswordRequirements" style="display: none;">
                                <div class="pmu-requirement" data-rule="length">
                                    <span class="pmu-requirement-icon">●</span>
                                    <span class="pmu-requirement-text">Almeno 8 caratteri</span>
                                </div>
                                <div class="pmu-requirement" data-rule="number">
                                    <span class="pmu-requirement-icon">●</span>
                                    <span class="pmu-requirement-text">Un numero</span>
                                </div>
                                <div class="pmu-requirement" data-rule="uppercase">
                                    <span class="pmu-requirement-icon">●</span>
                                    <span class="pmu-requirement-text">Una lettera maiuscola</span>
                                </div>
                                <div class="pmu-requirement" data-rule="special">
                                    <span class="pmu-requirement-icon">●</span>
                                    <span class="pmu-requirement-text">Un carattere speciale (!@@#$%^&amp;*)</span>
                                </div>
                            </div>
                        </div>
                        <div class="pmu-password-input-wrapper">
                            <input type="password" class="pmu-form-control" id="signupPassword" name="Password" placeholder="••••••••" minlength="8" required />
                            <button type="button" class="pmu-password-toggle" data-target="signupPassword" tabindex="-1">
                                <svg class="eye-open" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M10 4C5 4 1.73 7.11 1 10c.73 2.89 4 6 9 6s8.27-3.11 9-6c-.73-2.89-4-6-9-6z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                    <circle cx="10" cy="10" r="2.5" stroke="currentColor" stroke-width="1.5"/>
                                </svg>
                                <svg class="eye-closed" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" style="display: none;">
                                    <path d="M3 3l14 14M10 7a3 3 0 013 3M10 13a3 3 0 01-3-3" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                                    <path d="M7.5 6.5C8.3 6.2 9.1 6 10 6c5 0 8.27 3.11 9 6a11 11 0 01-2.16 3.19M12.5 13.5A5.5 5.5 0 011 10a11 11 0 012.84-3.69" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                    
                    <div class="pmu-form-group">
                        <label for="signupConfirmPassword">Conferma Password</label>
                        <div class="pmu-password-input-wrapper">
                            <input type="password" class="pmu-form-control" id="signupConfirmPassword" name="ConfirmPassword" placeholder="••••••••" required />
                            <button type="button" class="pmu-password-toggle" data-target="signupConfirmPassword" tabindex="-1">
                                <svg class="eye-open" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M10 4C5 4 1.73 7.11 1 10c.73 2.89 4 6 9 6s8.27-3.11 9-6c-.73-2.89-4-6-9-6z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                    <circle cx="10" cy="10" r="2.5" stroke="currentColor" stroke-width="1.5"/>
                                </svg>
                                <svg class="eye-closed" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" style="display: none;">
                                    <path d="M3 3l14 14M10 7a3 3 0 013 3M10 13a3 3 0 01-3-3" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                                    <path d="M7.5 6.5C8.3 6.2 9.1 6 10 6c5 0 8.27 3.11 9 6a11 11 0 01-2.16 3.19M12.5 13.5A5.5 5.5 0 011 10a11 11 0 012.84-3.69" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                    
                    <button type="submit" class="pmu-btn pmu-btn-success">Crea Account</button>
                </form>
                
                <a href="#" class="pmu-link-secondary text-center" data-bs-toggle="modal" data-bs-target="#loginModal" data-bs-dismiss="modal">
                    Hai già un account? <strong>Accedi</strong>
                </a>
            </div>
        </div>
    </div>
</div>
