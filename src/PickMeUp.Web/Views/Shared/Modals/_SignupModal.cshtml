@inject Microsoft.AspNetCore.Mvc.IUrlHelper Url
<!-- Signup Modal - refactored to Bootstrap utilities -->
<div class="modal fade" id="signupModal" tabindex="-1" aria-labelledby="signupModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="signupModalLabel">Registrati</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="h6 text-center">Crea un account per iniziare a condividere viaggi</p>

                <div class="text-center my-2">
                    <div id="googleSignupBtn" data-url="@Url.Action("GoogleLogin", "Auth")"></div>
                </div>

                <div class="d-flex align-items-center my-3">
                    <hr class="flex-grow-1" />
                    <span class="mx-2 text-muted small">oppure</span>
                    <hr class="flex-grow-1" />
                </div>

                <form id="signupForm" data-url="@Url.Action("SignUp", "Auth")">
                    <div class="mb-3">
                        <label for="signupFirstName" class="form-label">Nome</label>
                        <input type="text" class="form-control" id="signupFirstName" name="FirstName" placeholder="Mario" required />
                    </div>

                    <div class="mb-3">
                        <label for="signupLastName" class="form-label">Cognome</label>
                        <input type="text" class="form-control" id="signupLastName" name="LastName" placeholder="Rossi" required />
                    </div>

                    <div class="mb-3">
                        <label for="signupEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="signupEmail" name="Email" placeholder="mario.rossi@email.com" required />
                    </div>

                    <div class="mb-3 pmu-form-group">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <label for="signupPassword" class="form-label mb-0">Password</label>
                            <div class="d-flex align-items-center">
                                <div id="signupPasswordStrength" class="d-flex gap-1 me-2" aria-hidden="true">
                                    <span class="pmu-strength-dot" data-rule="length">‚óè</span>
                                    <span class="pmu-strength-dot" data-rule="number">‚óè</span>
                                    <span class="pmu-strength-dot" data-rule="uppercase">‚óè</span>
                                    <span class="pmu-strength-dot" data-rule="special">‚óè</span>
                                </div>
                                <div class="pmu-info-wrap position-relative">
                                    <button type="button" class="btn btn-link p-0 small pmu-password-info-btn" id="signupPasswordInfo" tabindex="-1" aria-label="Requisiti password">?</button>
                                    <div id="signupPasswordRequirements" class="small text-muted mt-1 pmu-requirements-popup" style="display:none;">
                                        <div class="pmu-requirement" data-rule="length">‚óè Almeno 8 caratteri</div>
                                        <div class="pmu-requirement" data-rule="number">‚óè Un numero</div>
                                        <div class="pmu-requirement" data-rule="uppercase">‚óè Una lettera maiuscola</div>
                                        <div class="pmu-requirement" data-rule="special">‚óè Un carattere speciale (!@@#$%^&*)</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-2 d-flex align-items-center">
                            <div class="flex-grow-1">
                                <div class="input-group">
                                    <input type="password" class="form-control" id="signupPassword" name="Password" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" minlength="8" required />
                                    <button type="button" class="btn btn-outline-secondary" data-target="signupPassword" tabindex="-1" aria-label="Toggle password visibility">
                                        <span class="eye-open">üëÅ</span>
                                        <span class="eye-closed" style="display:none;">üôà</span>
                                    </button>
                                </div>
                                <!-- requirements popup is anchored to the ? button above; duplicate static copy removed -->
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="signupConfirmPassword" class="form-label">Conferma Password</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="signupConfirmPassword" name="ConfirmPassword" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" required />
                            <button type="button" class="btn btn-outline-secondary" data-target="signupConfirmPassword" tabindex="-1" aria-label="Toggle password visibility">
                                <span class="eye-open">üëÅ</span>
                                <span class="eye-closed" style="display:none;">üôà</span>
                            </button>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success w-100">Crea Account</button>
                </form>

                <div class="mt-3 text-center">
                    <a href="#" class="d-block link-secondary" data-bs-toggle="modal" data-bs-target="#loginModal" data-bs-dismiss="modal">Hai gi√† un account? <strong>Accedi</strong></a>
                </div>
            </div>
        </div>
    </div>
</div>
