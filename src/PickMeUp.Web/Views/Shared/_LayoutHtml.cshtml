<!DOCTYPE html>
<html lang="@this.CurrentCulture().Name" class="@ViewData["FullscreenClass"]">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - PickMeUp</title>
    <meta name="description" content="@ViewData["Description"]">
    @RenderSection("googlehead", false)
    @RenderSection("metas", false)
    <script>
        // Apply theme from browser preference before CSS loads to avoid FOUC
        (function() {
            try {
                var prefersLight = window.matchMedia && window.matchMedia('(prefers-color-scheme: light)').matches;
                var theme = prefersLight ? 'light' : 'dark';
                document.documentElement.setAttribute('data-bs-theme', theme);
            } catch (e) {
                // ignore
            }
        })();
    </script>
    <link href="~/node_modules/@@fortawesome/fontawesome-free/css/all.min.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/css/bundle-global.css" asp-append-version="true" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    @RenderSection("styles", false)
</head>
<body class="d-flex flex-column min-vh-100">
    @RenderSection("googlebody", false)
    @RenderBody()
    <script type="text/javascript">
        var clientLocale = '@this.CurrentCulture().Name';
    </script>
    <environment include="Development">
        <script src="~/js/bundle-global.js" asp-append-version="true"></script>
    </environment>
    <environment include="Staging,Production">
        <script src="~/js/bundle-global.min.js" asp-append-version="true"></script>
    </environment>

    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <script src="https://unpkg.com/vue@3"></script>

    @RenderSection("scripts", required: false)
</body>
</html>