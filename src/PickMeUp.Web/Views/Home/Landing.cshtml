@{
    ViewData["Title"] = "Pick-me-UP - Find your way";
    Layout = "_Layout";
}

@section hero {
    <div class="row ms-1">
        <div class="col-6 text-end p-0">
            <h1 class="display-3 fw-bold text-white">Find yo</h1>
        </div>
        <div class="col-6 text-start p-0">
            <h1 class="display-3 fw-bold text-white d-md-none">ur way</h1>
            <h1 class="display-3 fw-bold text-dark d-none d-md-block">ur way</h1>
        </div>
    </div>
}

<style>
    /* Split background for the whole page */
    body {
        background: linear-gradient(to bottom, #212529 50%, #f8f9fa 50%);
    }
    @@media (min-width: 768px) {
        body {
            background: linear-gradient(to right, #212529 50%, #f8f9fa 50%);
        }
    }
</style>

<div class="d-flex flex-column flex-grow-1 justify-content-center position-relative">
    <div class="row h-100 align-items-center">
        <!-- Left Side (Dark) -->
        <div class="col-12 col-md-6 d-flex flex-column pe-md-5 text-white mb-5 mb-md-0">
            <div class="text-center text-white fs-4 fw-bold mb-5">
                Sei un autista?
            </div>
             <div class="d-flex justify-content-center">
                @{
                    var addTravelAction = User?.Identity?.IsAuthenticated is true 
                        ? Url.Action("Create", "Travel")
                        : Url.Action("Login", "Auth");
                }
                 <a href="@addTravelAction" id="addTripBtn" class="btn bg-white p-4 rounded-4 text-start d-flex align-items-center gap-3 shadow-lg border-0 text-black" style="min-width: 280px;">
                    <i class="fa-solid fa-plus fa-2x"></i>
                    <div class="fw-bold fs-5">AGGIUNGI UN<br>VIAGGIO</div>
                 </a>
             </div>
        </div>

        <!-- Right Side (Light) -->
        <div class="col-12 col-md-6 d-flex flex-column ps-md-5 text-dark mt-5 mt-md-0">
            <div class="text-center text-black fs-4 fw-bold mb-5">
                Sei un passeggiero?
            </div>
             <div class="d-flex justify-content-center">
                @{
                    var findRideAction = User?.Identity?.IsAuthenticated is true 
                        ? Url.Action("List", "Travel", new { IsFromFindTravel  = true })
                        : Url.Action("Login", "Auth");
                }
                 <a href="@findRideAction" id="findRideBtn" class="btn btn-primary p-4 rounded-4 text-start d-flex align-items-center gap-3 shadow-lg text-white border-0" style="min-width: 280px;">
                    <i class="bi bi-geo-alt fa-2x"></i>
                    <div class="fw-bold fs-5">CHIEDI<br>UN PASSAGGIO</div>
                 </a>
             </div>
        </div>
    </div>
</div>