@using Microsoft.CodeAnalysis.Operations
@using Microsoft.Extensions.Options
@using PickMeUp.Core.Services.GoogleRoutes
@using PickMeUp.Enums.UserPickUpRequest
@using PickMeUp.Web.Models.Travel

@inject IOptions<GoogleSettings> _googleSettings
@inject Microsoft.AspNetCore.Mvc.IUrlHelper Url

@model TravelViewModel
@{
    ViewData["Title"] = "Viaggio Pick-me-UP";
    Layout = "_Layout";
    var currentUserId = int.TryParse(
        this.User!.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value, 
        out var userId) ? userId : (int?)null;

    var isOwner = currentUserId.HasValue && currentUserId.Value == Model.UserId;
    
    var requestsStoreByStatus = Model.PickUpRequests
        .GroupBy(r => r.Status)
        .ToDictionary(g => g.Key, g => g.ToList());
}

<div id="travelApp" class="container py-5" v-cloak>
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 mb-4">
            <div class="list-group-item list-group-item-action p-4 mb-2 border rounded bg-pmu-dark" aria-current="true">
                <div class="d-flex w-100 justify-content-between mb-2">
                    <h5 class="mb-1 text-primary">
                        <i class="bi bi-geo-alt"></i> @Model.DepartureLocation.ReadableAddress 
                        <i class="bi bi-arrow-right mx-2 text-muted"></i> 
                        <i class="bi bi-geo-alt-fill"></i> @Model.DestinationLocation.ReadableAddress
                    </h5>
                    <small class="text-muted">@($"{Model.DepartureDate.ToString("dd MMM yyyy")} {Model.DepartureTime.ToShortTimeString()}")</small>
                </div>
                <div class="d-flex justify-content-between align-items-end">
                    <div>
                        <p class="mb-1"><i class="bi bi-person-circle"></i> Autista: @(isOwner ? "Tu" : Model.UserNominative)</p>
                        <span class="badge bg-success rounded-pill">
                            @(Model.TotalPassengersSeatsCount - Model.OccupiedPassengerSeatsCount) posti liberi
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-10">
            <div class="card shadow-sm">
                <div class="card-body">
                    @* Pick-up requests trigger *@
                    <div class="row mb-4 px-2">
                        <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#pickUpRequestsModal">
                            @(isOwner ? "Visualizza richieste di pick-up" : "Le fermate del viaggio")
                            @if (requestsStoreByStatus.TryGetValue(UserPickUpRequestStatus.Pending, out var pendingRequests) && isOwner)
                            {
                                <span class="badge bg-warning">@pendingRequests.Count</span>
                            }
                        </button>
                    </div>

                    <div class="position-relative">
                        <div v-if="state.routeStats.visible" class="mb-2">
                            <div class="d-inline-flex align-items-center bg-light border rounded shadow-sm px-3 py-2 gap-4">
                                <div>
                                    <span class="fw-bold text-dark">{{ state.routeStats.distanceText }}</span>
                                    <span class="mx-2 text-dark fw-bold"> - </span>
                                    <span class="fw-bold text-dark">{{ state.routeStats.durationText }}</span>
                                </div>
                            </div>
                        </div>
                        
                        <div id="map" class="rounded border" style="height:520px; width:100%;"></div>
                    </div>

                    @if (!isOwner)
                    {
                        <div class="mt-4">
                            <div class="mb-3">
                                <label for="location-autocomplete" class="form-label">Luogo di Pick-Up</label>
                                <div id="location-container"></div>
                                <div class="invalid-feedback d-block" v-if="state.submitted && !state.location">
                                    Seleziona un indirizzo dai suggerimenti
                                </div>
                            </div>
                            <button type="button" @@click="handleRequestPickUp" class="btn btn-primary col-auto">
                                Richiedi Pick-Up
                            </button>
                        </div>
                    }
                    else
                    {
                        <button type="button" class="btn btn-danger mt-3 col-auto">
                            Annulla Viaggio
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="pickUpRequestsModal" tabindex="-1" aria-labelledby="pickUpRequestsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="pickUpRequestsModalLabel">
                    <i class="bi bi-map me-2"></i>Itinerario Viaggio [@($"{Model.DepartureDate:dd/MM/yyyy}")]
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4" style="background-color: #1a202c;">
                @if (Model.PickUpRequests.Length == 0)
                {
                    <p class="text-center p-4">Nessuna richiesta di pick-up al momento.</p>
                }
                else
                {
                    <div class="timeline-container">
                        <div class="timeline-line"></div>
                        
                        @* Departure Section *@
                        <div class="timeline-item">
                            <div class="timeline-icon start">üöó</div>
                            <div class="timeline-card start">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center mb-2">
                                            <span class="badge bg-success me-2">PARTENZA</span>
                                            <span class="badge bg-primary">
                                                <i class="bi bi-clock me-1"></i>@Model.DepartureTime.ToString("HH:mm")
                                            </span>
                                        </div>
                                        <p class="mb-1 small text-dark">
                                            <i class="bi bi-person-fill me-1"></i>Driver: <strong class="text-dark">@(isOwner ? "TU" : Model.UserNominative)</strong>
                                        </p>
                                        <p class="mb-0 fw-bold text-dark">
                                            <i class="bi bi-geo-alt-fill me-1 text-success"></i>@Model.DepartureLocation.ReadableAddress
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @* Accepted requests (Pick-Up Points) *@
                        @if (requestsStoreByStatus.TryGetValue(UserPickUpRequestStatus.Accepted, out var acceptedRequests))
                        {
                            @foreach (var request in acceptedRequests.Select((r, i) => new { Request = r, Index = i }))
                            {
                                <div class="timeline-item">
                                    <div class="timeline-icon pickup">üìç</div>
                                    <div class="timeline-card">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div class="flex-grow-1">
                                                <div class="d-flex align-items-center mb-2">
                                                    <span class="badge bg-primary me-2">TAPPA @(request.Index + 1)</span>
                                                    <span class="badge bg-secondary">
                                                        <i class="bi bi-clock me-1"></i>--:--
                                                    </span>
                                                </div>
                                                <p class="mb-1 small text-dark">
                                                    <i class="bi bi-person-circle me-1"></i>Passeggero: <strong class="text-dark">@request.Request.UserNominative</strong>
                                                </p>
                                                <p class="mb-0 fw-bold text-dark">
                                                    <i class="bi bi-geo-alt-fill me-1 text-primary"></i>@request.Request.Location.ReadableAddress
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                        @* Arrival Section *@
                        <div class="timeline-item">
                            <div class="timeline-icon end">üéØ</div>
                            <div class="timeline-card end">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center mb-2">
                                            <span class="badge bg-danger me-2">ARRIVO</span>
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-clock me-1"></i>--:--
                                            </span>
                                        </div>
                                        <p class="mb-0 fw-bold text-dark">
                                            <i class="bi bi-geo-alt-fill me-1 text-danger"></i>@Model.DestinationLocation.ReadableAddress
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* Pending requests section (only for owner) *@
                    @if (isOwner && pendingRequests is not null && pendingRequests.Any())
                    {
                        <div class="mt-4">
                            <form id="bulkActionsForm" asp-controller="Travel" asp-action="EditPickUpRequestStatus" method="post">
                                <input type="hidden" name="travelId" value="@Model.UserTravelId" />
                                
                                <div class="bg-dark text-white p-4 rounded-3 shadow" style="background-color: #0d1117 !important;">
                                    <h6 class="mb-3 fw-bold text-white">
                                        <i class="bi bi-hourglass-split me-2"></i>Richieste in attesa di approvazione
                                    </h6>
                                    @foreach (var request in pendingRequests)
                                    {
                                        <div class="form-check mb-3 p-3 bg-white text-dark border-0 rounded-3 shadow-sm pending-request-card">
                                            <input class="form-check-input" type="checkbox" name="pickUpRequestIds" value="@request.PickUpRequestId" id="request-@request.PickUpRequestId">
                                            <label class="form-check-label w-100 cursor-pointer" for="request-@request.PickUpRequestId">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div class="flex-grow-1">
                                                        <div class="d-flex align-items-center mb-2">
                                                            <span class="badge bg-warning text-dark me-2">
                                                                <i class="bi bi-clock-history me-1"></i>IN ATTESA
                                                            </span>
                                                        </div>
                                                        <p class="mb-1 small text-dark">
                                                            <i class="bi bi-person-circle me-1"></i>Passeggero: <strong class="text-dark">@request.UserNominative</strong>
                                                        </p>
                                                        <p class="mb-0 fw-bold text-dark">
                                                            <i class="bi bi-geo-alt-fill me-1 text-warning"></i>@request.Location.ReadableAddress
                                                        </p>
                                                    </div>
                                                </div>
                                            </label>
                                        </div>
                                    }

                                    <div class="d-grid gap-2 mt-4">
                                        <button type="submit" name="status" value="@((int)UserPickUpRequestStatus.Accepted)" class="btn btn-success btn-lg">
                                            <i class="bi bi-check-circle me-2"></i>Conferma le Richieste selezionate
                                        </button>
                                        <p class="text-center mb-2 small text-white-50">oppure</p>
                                        <button type="submit" name="status" value="@((int)UserPickUpRequestStatus.Rejected)" class="btn btn-warning text-dark btn-lg">
                                            <i class="bi bi-x-circle me-2"></i>Rifiuta le Richieste selezionate
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Dati iniettati dal server per Vue
        window.routeData = @Json.Serialize(new {
            travelId = Model.UserTravelId,
            origin = new { lat = Model.DepartureLocation.Coordinates.Latitude, lng = Model.DepartureLocation.Coordinates.Longitude },
            destination = new { lat = Model.DestinationLocation.Coordinates.Latitude, lng = Model.DestinationLocation.Coordinates.Longitude },
            encodedPolyline = Model.Route?.EncodedPolyline,
            distanceMeters = Model.Route?.DistanceMeters,
            durationSeconds = Model.Route?.DurationSeconds,
            pickUpRequests = Model.PickUpRequests
                .Select(pickUnRequest => new {
                    pickUnRequest.UserNominative,
                    pickUnRequest.Location.ReadableAddress,
                    pickUnRequest.Status,
                    location = new { lat = pickUnRequest.Location.Coordinates.Latitude, lng = pickUnRequest.Location.Coordinates.Longitude },
                }).ToArray(),
        });
    </script>
    <script src="~/js/travel.js" asp-append-version="true"></script>
    <script async
            src="https://maps.googleapis.com/maps/api/js?key=@(_googleSettings.Value.MapsApiKey)&loading=async&callback=initTravelApp">
    </script>
}