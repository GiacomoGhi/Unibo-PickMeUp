@using Microsoft.Extensions.Options
@using PickMeUp.Core.Services.GoogleRoutes

@inject IOptions<GoogleSettings> _googleSettings

@model PickMeUp.Web.Models.Auth.LoginViewModel
@{
    ViewData["Title"] = "Accedi - Pick-me-UP";
    Layout = "_Layout";
}

<div class="d-flex flex-column flex-grow-1 justify-content-center position-relative">
    <div class="row h-100 align-items-center">
        <!-- Left Side (Dark) -->
        <div class="col-12 col-md-6 text-center text-white mb-5 mb-md-0 d-flex flex-column justify-content-center align-items-center" style="min-height: 300px;">
            
            <!-- Google Button -->
            <div id="googleLoginBtn" 
                 data-url="@Url.Action("GoogleLogin", "Auth2")"
                 data-return-url="@Model.ReturnUrl"
                 data-google-client-id="@_googleSettings.Value.ClientId"
                 class="mb-4 btn-google-custom"></div>

            <!-- Other Options Button -->
            <a href="@Url.Action("Login", "Auth2", new { useCredentials = true, returnUrl = Model.ReturnUrl })" class="btn bg-white text-dark py-3 px-4 rounded-1 fw-bold text-uppercase shadow-sm" style="min-width: 280px;">
                ALTRE OPZIONI DI ACCESSO
            </a>
        </div>

        <!-- Right Side (Light) -->
        <div class="col-12 col-md-6 text-dark mt-5 mt-md-0 p-4 p-md-5 d-flex flex-column justify-content-center align-items-center">
            
            <!-- Register Button -->
            <a href="@Url.Action("SignUp", "Auth2", new { returnUrl = Model.ReturnUrl })" class="btn btn-info p-3 rounded-4 d-flex align-items-center gap-3 shadow-lg text-white border-0 bg-pmu-primary" style="min-width: 280px;">
                <span class="display-4">+</span>
                <div class="text-start">
                    <div class="fw-bold fs-5">REGISTRATI</div>
                </div>
            </a>

        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/auth2.js"></script>
}
